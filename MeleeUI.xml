<Ui xmlns="http://www.blizzard.com/wow/ui/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\..\FrameXML\UI.xsd">

    <FontFamily name="WFCNormalFont" virtual="true">
        <Member alphabet="roman">
            <Font font="Fonts\FRIZQT__.TTF" height="11"/>
        </Member>
        <Member alphabet="korean">
            <Font font="Fonts\2002.TTF" height="12" spacing="1"/>
        </Member>
        <Member alphabet="simplifiedchinese">
            <Font font="Fonts\ARKai_T.ttf" height="12"/>
        </Member>
        <Member alphabet="traditionalchinese">
            <Font font="Fonts\bKAI00M.TTF" height="12"/>
        </Member>
        <Member alphabet="russian">
            <Font font="Fonts\FRIZQT___CYR.TTF" height="11"/>
        </Member>
    </FontFamily>

    <FontFamily name="WFCSmallFont" virtual="true">
        <Member alphabet="roman">
            <Font font="Fonts\FRIZQT__.TTF" height="9"/>
        </Member>
        <Member alphabet="korean">
            <Font font="Fonts\2002.TTF" height="10" spacing="1"/>
        </Member>
        <Member alphabet="simplifiedchinese">
            <Font font="Fonts\ARKai_T.ttf" height="10"/>
        </Member>
        <Member alphabet="traditionalchinese">
            <Font font="Fonts\bKAI00M.TTF" height="10"/>
        </Member>
        <Member alphabet="russian">
            <Font font="Fonts\FRIZQT___CYR.TTF" height="9"/>
        </Member>
    </FontFamily>

    <Frame name="WFCTotemTemplate" inherits="BackdropTemplate" virtual="true">
        <Size y="30" />
        <Frames>
            <!-- create icon -->
            <Frame name="$parent_Icon">
                <Size x="25" y="25" />
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="1" y="-1" />
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self.icon = self:CreateTexture(nil, "ARTWORK")
                        self.icon:SetSize(25, 25)
                        self.icon:SetPoint("LEFT", self, "LEFT", 0, 0)
                    </OnLoad>
                </Scripts>
            </Frame>
            <Frame name="$parent_Uptime" inherits="BackdropTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent_Icon" relativePoint="TOPRIGHT" x="4" y="-1" />
                    <Anchor point="BOTTOMLEFT" relativeTo="$parent_Icon" relativePoint="BOTTOMRIGHT" x="4" y="1" />
                    <Anchor point="TOPRIGHT" relativeTo="$parent" x="-1" y="-1" />
                    <Anchor point="BOTTOMRIGHT" relativeTo="$parent" x="-1" y="1" />
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self:SetBackdrop ({bgFile = [[Interface\AddOns\WindfuryComm\background]], tile = true, tileSize = 16, insets = {left = 0, right = 0, top = 0, bottom = 0}})
                        self:SetBackdropColor (0.1, 0.1, 0.1, 0.8)
                    </OnLoad>
                </Scripts>
                <Frames>
                    <StatusBar name="$parent_Bar" inherits="TextStatusBar">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parent"  />
                            <Anchor point="BOTTOMLEFT" relativeTo="$parent"  />
                            <Anchor point="TOPRIGHT" relativeTo="$parent" />
                            <Anchor point="BOTTOMRIGHT" relativeTo="$parent" />
                        </Anchors>
                        <BarTexture file="Interface\RaidFrame\Raid-Bar-Hp-Fill"/>
                        <Layers>
                            <Layer level="OVERLAY">
                                <FontString name="$parent_Text" inherits="WFCNormalFont" text="--">
                                    <Color r="0.3" g="0.7" b="1"/>
                                    <Anchors>
                                        <Anchor point="CENTER" />
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                    </StatusBar>
                </Frames>
            </Frame>
        </Frames>
    </Frame>            <!--$parent_Buttons-->

    <Frame name="WFCMeleeFrame" parent="UIParent" frameStrata="MEDIUM" enableMouse="true" movable="true" resizable="false" inherits="BackdropTemplate">
        <Size x="120" y="130" />
        <Anchors>
            <Anchor point="TOP" relativeTo="$parent" />
        </Anchors>
        <Scripts>
            <OnDragStart>
                WFCMeleeFrame:StartMoving()
            </OnDragStart>
            <OnDragStop>
                WFCMeleeFrame:StopMovingOrSizing();
            </OnDragStop>
            <OnLoad>
                self:RegisterForDrag("LeftButton")
                self:SetBackdrop ({bgFile = [[Interface\AddOns\WindfuryComm\background]], tile = true, tileSize = 16, insets = {left = 0, right = 0, top = 0, bottom = 0}})
   			    self:SetBackdropColor (0.1, 0.1, 0.1, 0.5)
    		    self:SetBackdropBorderColor(0, 0, 0, 0.9)
                self:Hide()
            </OnLoad>
        </Scripts>

        <Frames>

            <Button name="$parent_SessionButton">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="4" y="1" />
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        self.icon = self:CreateTexture(nil, "ARTWORK")
                        self.icon:SetTexture("Interface\\Icons\\INV_Misc_PocketWatch_01") -- Replace with your icon path
                        self.icon:SetSize(15, 15)
                        self.icon:SetPoint("LEFT", self, "LEFT", 0, 0)
                    </OnLoad>
                    <OnClick>
                        self:ToggleSessionView()
                    </OnClick>
                </Scripts>
            </Button>            <!--$parent_CloseButton-->

            <Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="1" y="1" />
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        wfc:HideUI()
                    </OnClick>
                </Scripts>
            </Button>            <!--$parent_CloseButton-->

            <Frame name="$parent_Title" inherits="BackdropTemplate">
                <Size x="120" y="20" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="2" y="-2"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-2" y="-2"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <FontString name="$parent_Text" inherits="WFCNormalFont" text="Totems">
                            <Color r="0.3" g="0.7" b="1"/>
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>            <!--$parent_Title-->

            <Frame name="$parent_Header" frameStrata="HIGH" inherits="BackdropTemplate">
                <Size x="120" y="56" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="2" y="-2"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-2" y="-2"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <FontString name="$parent_Text" inherits="WFCSmallFont" text="Current Fight">
                            <Color r="1" g="0.9" b="0.2"/>
                            <Anchors>
                                <Anchor point="CENTER" />
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>            <!--$parent_Header-->

            <!-- totem rows -->
        </Frames>
    </Frame>    <!--RaidLogger_RaidWindow-->

    <Script File="MeleeUI.lua"/>
</Ui>
